<h1>Editing Book</h1>

<%= form_with model: @books do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>
  
  <h4>body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>
  <%= link_to "Edit", edit_book_path(@book.id) %>
  <%= link_to "Destroy", destroy_book_path(@book.id), method: :delete, "data-confirm" => "Are You Sure?" %>
  
<% end %>