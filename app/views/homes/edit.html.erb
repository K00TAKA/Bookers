<h1>Editing Book</h1>
<!--編集前情報を枠内にデータを引っ張ってくる方法？-->
<%= form_with model: @books do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>
  
  <h4>body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>
  <%= link_to "Show", "/books/#{@book.id}" %>
  <%= link_to "Back",  "/books" %>
  
<% end %>